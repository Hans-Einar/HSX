{
  "name": "hsx-debug",
  "displayName": "HSX Debugger",
  "publisher": "hsx",
  "description": "Debug Adapter Protocol integration for HSX firmware targets.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Debuggers"],
  "main": "./src/extension.js",
  "activationEvents": ["onDebugResolve:hsx"],
  "contributes": {
    "debuggers": [
      {
        "type": "hsx",
        "label": "HSX Debugger",
        "languages": ["c", "cpp", "plaintext"],
        "configurationAttributes": {
          "launch": {
            "required": ["pid"],
            "properties": {
              "pid": {
                "type": "number",
                "description": "PID to lock via session.open.",
                "default": 1
              },
              "host": {
                "type": "string",
                "description": "Executive host.",
                "default": "127.0.0.1"
              },
              "port": {
                "type": "number",
                "description": "Executive port.",
                "default": 9998
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "hsx",
            "name": "HSX Launch",
            "request": "launch",
            "pid": 1
          }
        ]
      }
    ]
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0"
  }
}
