{
  "name": "hsx-debug",
  "displayName": "HSX Debugger",
  "publisher": "hsx",
  "description": "Debug Adapter Protocol integration for HSX firmware targets.",
  "version": "0.0.23",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Debuggers"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onDebugResolve:hsx",
    "onDebugInitialConfigurations:hsx",
    "onView:hsxMemoryView",
    "onView:hsxStackView",
    "onView:hsxDisassemblyView",
    "onCommand:hsx.views.refreshMemory",
    "onCommand:hsx.views.setMemoryBase",
    "onCommand:hsx.views.refreshStack",
    "onCommand:hsx.views.refreshDisassembly",
    "onCommand:hsx.views.setDisassemblyBase",
    "onCommand:hsx.views.followProgramCounter",
    "onCommand:hsx.views.goToProgramCounter",
    "onCommand:hsx.views.copyDisassembly",
    "onCommand:hsx.disassembly.toggleBreakpoint",
    "onCommand:hsx.views.disassembly.stepInstruction",
    "onCommand:hsx.views.trace.stepInstruction",
    "onCommand:hsx.views.stepInstruction"
  ],
  "contributes": {
    "debuggers": [
      {
        "type": "hsx",
        "label": "HSX Debugger",
        "languages": [
          "c",
          "cpp",
          "plaintext"
        ],
        "configurationAttributes": {
          "launch": {
            "required": [
              "pid"
            ],
            "properties": {
              "pid": {
                "type": "number",
                "description": "PID to lock via session.open.",
                "default": 1
              },
              "host": {
                "type": "string",
                "description": "Executive host.",
                "default": "127.0.0.1"
              },
              "port": {
                "type": "number",
                "description": "Executive port.",
                "default": 9998
              },
              "pythonPath": {
                "type": "string",
                "description": "Python interpreter used to launch hsx-dap.py."
              },
              "symPath": {
                "type": "string",
                "description": "Path to the preferred .sym file (passed to the adapter)."
              },
              "logLevel": {
                "type": "string",
                "enum": [
                  "CRITICAL",
                  "ERROR",
                  "WARNING",
                  "INFO",
                  "DEBUG"
                ],
                "default": "INFO",
                "description": "Log verbosity for hsx-dap."
              },
              "adapterArgs": {
                "type": "array",
                "description": "Extra command-line arguments appended after hsx-dap.py.",
                "items": {
                  "type": "string"
                }
              },
              "env": {
                "type": "object",
                "description": "Environment variables merged into the adapter process."
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "hsx",
            "name": "HSX Launch",
            "request": "launch",
            "pid": 1
          }
        ],
        "configurationSnippets": [
          {
            "label": "HSX: Attach PID",
            "description": "Attach to an HSX PID running inside the executive.",
            "body": {
              "type": "hsx",
              "request": "launch",
              "name": "HSX Attach",
              "pid": 1,
              "host": "127.0.0.1",
              "port": 9998,
              "symPath": "${workspaceFolder}/build/app.sym"
            }
          }
        ]
      }
    ],
    "views": {
      "debug": [
        {
          "id": "hsxMemoryView",
          "name": "HSX Memory"
        },
        {
          "id": "hsxStackView",
          "name": "HSX Stack"
        },
        {
          "id": "hsxRegistersView",
          "name": "HSX Registers"
        },
        {
          "id": "hsxDisassemblyView",
          "name": "HSX Disassembly"
        },
        {
          "id": "hsxTraceView",
          "name": "HSX Trace"
        }
      ]
    },
    "commands": [
      {
        "command": "hsx.views.refreshMemory",
        "title": "Refresh Memory",
        "icon": "$(refresh)"
      },
      {
        "command": "hsx.views.setMemoryBase",
        "title": "Set Memory Base Address…",
        "icon": "$(edit)"
      },
      {
        "command": "hsx.views.refreshStack",
        "title": "Refresh Stack",
        "icon": "$(refresh)"
      },
      {
        "command": "hsx.views.copyStack",
        "title": "Copy Stack Rows",
        "icon": "$(copy)"
      },
      {
        "command": "hsx.views.refreshRegisters",
        "title": "Refresh Registers",
        "icon": "$(refresh)"
      },
      {
        "command": "hsx.views.copyRegisters",
        "title": "Copy Registers",
        "icon": "$(copy)"
      },
      {
        "command": "hsx.views.refreshDisassembly",
        "title": "Refresh Disassembly",
        "icon": "$(refresh)"
      },
      {
        "command": "hsx.views.setDisassemblyBase",
        "title": "Disassemble From Address…",
        "icon": "$(go-to-file)"
      },
      {
        "command": "hsx.views.followProgramCounter",
        "title": "Follow Program Counter",
        "icon": "$(target)"
      },
      {
        "command": "hsx.views.goToProgramCounter",
        "title": "Go to Program Counter",
        "icon": "$(debug-step-back)"
      },
      {
        "command": "hsx.views.copyDisassembly",
        "title": "Copy Disassembly Rows",
        "icon": "$(copy)"
      },
      {
        "command": "hsx.views.addDisassemblyBreakpoint",
        "title": "Add Breakpoint at Selection",
        "icon": "$(debug-breakpoint)"
      },
      {
        "command": "hsx.views.playPause",
        "title": "Play / Pause Target",
        "icon": "$(debug-continue)"
      },
      {
        "command": "hsx.views.disassembly.stepInstruction",
        "title": "Step Instruction (Disassembly)",
        "icon": "$(debug-step-into)"
      },
      {
        "command": "hsx.views.trace.stepInstruction",
        "title": "Step Instruction (Trace)",
        "icon": "$(debug-step-into)"
      },
      {
        "command": "hsx.views.stepInstruction",
        "title": "Step Instruction",
        "icon": "$(debug-step-into)"
      },
      {
        "command": "hsx.breakpoints.clearAll",
        "title": "Clear All HSX Breakpoints",
        "icon": "$(trash)"
      },
      {
        "command": "hsx.trace.toggle",
        "title": "Toggle Trace Capture",
        "icon": "$(debug-pause)"
      },
      {
        "command": "hsx.trace.refresh",
        "title": "Refresh Trace",
        "icon": "$(refresh)"
      },
      {
        "command": "hsx.trace.copy",
        "title": "Copy Trace",
        "icon": "$(copy)"
      },
      {
        "command": "hsx.disassembly.clearBreakpoints",
        "title": "Clear Disassembly Breakpoints",
        "icon": "$(trash)"
      },
      {
        "command": "hsx.disassembly.toggleBreakpoint",
        "title": "Toggle Disassembly Breakpoint",
        "icon": "$(debug-breakpoint)"
      },
      {
        "command": "hsx.views.stopSession",
        "title": "Stop HSX Target",
        "icon": "$(debug-stop)"
      },
      {
        "command": "hsx.views.writeMemory",
        "title": "Write Memory…",
        "icon": "$(pencil)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "hsx.views.refreshMemory",
          "when": "view == hsxMemoryView",
          "group": "navigation"
        },
        {
          "command": "hsx.views.setMemoryBase",
          "when": "view == hsxMemoryView",
          "group": "navigation@2"
        },
        {
          "command": "hsx.views.refreshStack",
          "when": "view == hsxStackView",
          "group": "navigation"
        },
        {
          "command": "hsx.views.copyStack",
          "when": "view == hsxStackView",
          "group": "navigation@2"
        },
        {
          "command": "hsx.views.refreshRegisters",
          "when": "view == hsxRegistersView",
          "group": "navigation"
        },
        {
          "command": "hsx.views.copyRegisters",
          "when": "view == hsxRegistersView",
          "group": "navigation@2"
        },
        {
          "command": "hsx.views.refreshDisassembly",
          "when": "view == hsxDisassemblyView",
          "group": "navigation"
        },
        {
          "command": "hsx.views.setDisassemblyBase",
          "when": "view == hsxDisassemblyView",
          "group": "navigation@2"
        },
        {
          "command": "hsx.views.addDisassemblyBreakpoint",
          "when": "view == hsxDisassemblyView && hsxDisassembly.selectionAvailable",
          "group": "navigation@3"
        },
        {
          "command": "hsx.views.goToProgramCounter",
          "when": "view == hsxDisassemblyView",
          "group": "navigation@4"
        },
        {
          "command": "hsx.views.followProgramCounter",
          "when": "view == hsxDisassemblyView",
          "group": "navigation@5"
        },
        {
          "command": "hsx.views.copyDisassembly",
          "when": "view == hsxDisassemblyView",
          "group": "navigation@6"
        },
        {
          "command": "hsx.views.playPause",
          "when": "view == hsxDisassemblyView",
          "group": "navigation@7"
        },
        {
          "command": "hsx.views.disassembly.stepInstruction",
          "when": "view == hsxDisassemblyView",
          "group": "navigation@8"
        },
        {
          "command": "hsx.views.stopSession",
          "when": "view == hsxDisassemblyView",
          "group": "navigation@9"
        },
        {
          "command": "hsx.disassembly.clearBreakpoints",
          "when": "view == hsxDisassemblyView",
          "group": "navigation@10"
        },
        {
          "command": "hsx.breakpoints.clearAll",
          "when": "view == hsxDisassemblyView",
          "group": "navigation@11"
        },
        {
          "command": "hsx.views.writeMemory",
          "when": "view == hsxMemoryView",
          "group": "navigation@3"
        },
        {
          "command": "hsx.trace.toggle",
          "when": "view == hsxTraceView",
          "group": "navigation"
        },
        {
          "command": "hsx.trace.refresh",
          "when": "view == hsxTraceView && hsxTrace.enabled",
          "group": "navigation@2"
        },
        {
          "command": "hsx.trace.copy",
          "when": "view == hsxTraceView && hsxTrace.enabled",
          "group": "navigation@3"
        },
        {
          "command": "hsx.views.trace.stepInstruction",
          "when": "view == hsxTraceView",
          "group": "navigation@4"
        },
        {
          "command": "hsx.breakpoints.clearAll",
          "when": "view == hsxTraceView",
          "group": "navigation@5"
        },
        {
          "command": "hsx.breakpoints.clearAll",
          "when": "view == workbench.debug.breakpointView",
          "group": "navigation@10"
        }
      ],
      "view/item/context": [
        {
          "command": "hsx.disassembly.toggleBreakpoint",
          "when": "view == hsxDisassemblyView && viewItem =~ /hsxDisassemblyInstruction\\.address/",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "test": "npm run compile && node ./dist/test/configProvider.test.js",
    "prepackage": "node ./scripts/bump-version.js",
    "package": "npm run compile && vsce package -o hsx-debug.vsix"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.4.0",
    "vsce": "^2.15.0"
  }
}
